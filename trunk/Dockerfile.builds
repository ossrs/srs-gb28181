########################################################
FROM ossrs/srs:ubuntu20 AS ubuntu20-baseline
COPY . /srs
RUN cd /srs/trunk && ./configure --jobs=2 && make -j2

FROM ossrs/srs:ubuntu20 AS ubuntu20-srt
